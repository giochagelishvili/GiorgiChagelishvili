@using Forum.Application.Accounts.Requests;
@model LoginRequestModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<hr />

<div class="col-md-4">
    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="Login" class="d-flex flex-column gap-4">
        <div class="form-group">
            <label asp-for="Username" class="control-label"></label>
            <input asp-for="Username" class="form-control" placeholder="roronoazoro" />
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="******" />
        </div>

        <button class="btn btn-dark" type="submit">Login</button>
    </form>
</div>
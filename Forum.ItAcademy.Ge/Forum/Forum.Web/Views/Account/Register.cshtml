@using Forum.Application.Accounts.Requests;
@model RegisterRequestModel

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<hr />

<div class="col-md-4">
    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="Register" class="d-flex flex-column gap-4">
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" placeholder="example@example.com" />
        </div>

        <div class="form-group">
            <label asp-for="Username" class="control-label"></label>
            <input asp-for="Username" class="form-control" placeholder="roronoazoro" />
        </div>

        <div class="form-group">
            <label asp-for="Gender" class="control-label"></label>
            <select class="form-control" asp-for="Gender">
                <option selected disabled value="null">Choose</option>
                <option value="true">Male</option>
                <option value="false">Female</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" type="password" placeholder="******" />
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="******" />
        </div>

        <button type="submit" class="btn btn-dark">Register</button>
    </form>
</div>
@using Forum.Domain;
@using Forum.Application.Topics.Responses.Admin;
@model TopicResponseAdminModel;

@{
    ViewBag.Title = "Edit Topic";
}

<div class="d-flex flex-row align-items-center w-100 justify-content-between">
    <h2>Topic</h2>

    <form method="post" asp-area="Admin" asp-action="GetByEmail" asp-controller="User">
        <div class="d-flex flex-row align-items-center gap-2">
            <div class="input-group flex-nowrap">
                <span class="input-group-text">@@</span>
                <input class="form-control" placeholder="Email" name="email" />
            </div>

            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>
</div>

<hr />

<div class="d-flex flex-column align-items-center justify-content-start gap-4 w-100">
    <div class="bg-secondary p-4 rounded-2 text-white w-100">
        <div class="d-flex flex-row w-100 justify-content-between align-items-start">
            <h1 class="display-4">@Model.Title</h1>

            <a asp-area="Admin" asp-action="Profile" asp-controller="User" asp-route-userId="@Model.Author.Id" class="btn btn-outline-dark">@Model.Author.UserName</a>
        </div>

        <p class="lead">@Model.Description</p>

        <p>Status: @Model.Status</p>

        <p>State: @Model.State</p>

        <hr class="my-4">

        <div class="d-flex flex-column gap-2 w-25">
            <form asp-action="UpdateState">
                <input hidden name="Id" value="@Model.Id" />
                <div class="input-group">
                    <select class="form-select" name="State" required>
                        <option selected>Choose...</option>
                        <option value="@State.Hide">@State.Hide</option>
                        <option value="@State.Show">@State.Show</option>
                    </select>
                    <button class="btn btn-primary" type="submit">Update State</button>
                </div>
            </form>

            <form asp-action="UpdateStatus">
                <input hidden name="Id" value="@Model.Id" />
                <div class="input-group">
                    <select class="form-select" name="Status" required>
                        <option selected>Choose...</option>
                        <option value="@Status.Inactive">@Status.Inactive</option>
                        <option value="@Status.Active">@Status.Active</option>
                    </select>
                    <button class="btn btn-primary" type="submit">Update Status</button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Comments == null || Model.Comments.Count <= 0)
    {
        <div class="bg-secondary p-2 rounded-2 text-white w-75">
            <p class="text-center m-0">This topic has no comments yet.</p>
        </div>
    }
    else
    {
        @foreach (var comment in Model.Comments)
        {
            <div class="bg-secondary p-2 rounded-2 text-white w-75">
                <p class="text-center m-0">@comment.Body</p>
                <p class="text-center m-0">@comment.Author.UserName</p>
            </div>
        }
    }
</div>